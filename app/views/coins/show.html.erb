<div class="cointainer col-md-offset-1">
    <div class="container col-md-9">
        <div id="coin-image" class="col-md-3">
            <img src="http://img4.wikia.nocookie.net/__cb20140520034130/mariokart/images/1/17/CoinMK8.png" alt="sheep" class="img-responsive">
        </div>
        <div id="coin stats" class="col-md-offset-3">
            <h2>Coin <%= @coin.code %></h2>
            <div class="list-group col-md-4">
                <p class="list-group-item">
                    Created by:<%= " " + @coin.creator.formatted_name%>
                </p>
                <p class="list-group-item">
                    Minted:<%= " " + @coin.created_at.strftime("%B %d, %Y") %>
                </p>
                <p class="list-group-item">
                    Total transactions:<%= " " + @coin.moments.size.to_s %>
                </p>
            </div>
        </div>
    </div>
    <div class="container col-md-11">
        <h3 style="padding-left: 5px;">Transactions</h3>
        <div class="well container">
            <%= link_to "+ Add a new transaction", new_coin_moment_path(@coin), class: "new-moment-link" %>
        </div>
        <%= render @moments.sort_by{|moment| moment.date}.reverse %>
    </div>
</div>
