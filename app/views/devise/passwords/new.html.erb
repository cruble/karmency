<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3" style="padding-left: 0">
            <h3>Forgot your password?</h3>
        </div>
        <div class="col-sm-6 col-sm-offset-3">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>

                <br>
                <div class="pull-right">
                    <%= f.submit 'Send me reset password instructions', class: "btn btn-theme-dark btn-lg" %>
                </div>
            <% end %>
        </div>
    </div>
</div>

