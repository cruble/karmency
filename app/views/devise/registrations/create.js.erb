$('meta[name="csrf-token"]').attr('content', '<%= form_authenticity_token %>');

$('#login-modal').modal('hide');

// update header
$('#user-info-dropdown').replaceWith('<%= j render partial: 'layouts/navbar_user_info' %>');

// redirect if user is on the login page
if (window.location.pathname.match(/users\/sign_up/)) {
    window.location = "/";
}

// redirect if on sign-in page
if (window.location.pathname.match(/users\/sign_in/)) {
    window.location = "/";
}
