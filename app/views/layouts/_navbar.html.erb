        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <!-- About -->
                <li class="dropdown active ">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">About <i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                        <li><a href="#how">How it works</a></li>
                        <li><a href="#what">What people are saying</a></li>
                        <li><a href="#who">Our team</a></li>

                    </ul>
                </li>
                <!-- End About -->

                <!-- Coins -->
                <li class="dropdown active ">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Coins <i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                        <li><a href="">Lookup a coin</a></li>
                        <li><a href="">Browse coins</a></li>
                        <li><a href="">Create a new coin</a></li>
                        <li><a href="">My coins</a></li>

                    </ul>
                </li>
                <!-- End Coins -->

                <!-- Groups -->
                <li class="dropdown active ">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Groups <i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                        <li><a href="">Browse groups</a></li>
                        <li><a href="">Create a group</a></li>
                        <li><a href="">My groups</a></li>

                    </ul>
                </li>
                <!-- End Groups -->




                <li class="dropdown">
                    <% if user_signed_in? %>
                  <!-- User Logged In Navbar -->
                    <li class="dropdown active ">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome back, <%= current_user.first_name%> <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                            <li><a href="">My Coins</a></li>
                            <li><a href="">Create a new coin</a></li>
                            <li><a href="">My Groups</a></li>
                            <li><a href="">Create a new group</a></li>

                            <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>


                        </ul>
                    </li>
                    <!-- End User Logged In Navbar -->

                    <% else %>

                    <!-- Begin User Not Signed In In Navbar -->


                    <a href="#" class=" dropdown-toggle" data-toggle="dropdown"><i class="fa fa-lock"></i> Sign In</a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-login-box animated fadeInUp">

                        <form role="form">
                        <%= form_for(:user, :url => session_path(:user)) do |f| %>

                            <h4>Signin</h4>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                      <%= f.text_field :email, placeholder: "email address", class: "form-control" %>
                                </div>
                                <br>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    <%= f.password_field :password, class: "form-control" %>
                                </div>
                                <div class="checkbox pull-left">
                                    <label>
                                         <%= f.check_box :remember_me %> Remember me
                                    </label>
                                </div>
                                <%= f.submit 'Sign in' %>
                                <!--                                        <button type="submit" class="btn btn-theme pull-right">Login</button>                 -->
                                <div class="clearfix"></div>
                                  <%= link_to "Forgot your password?", new_password_path(:user) %>
                                <hr>
                                <p>Don't have an account!  <%= link_to "Register now", new_user_registration_path %></p>
                            </div>
                            <% end %>
                        </form>
                        <% end %>
                    </div>
                    <!-- END User Not Signed In In Navbar -->

