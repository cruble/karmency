    <!-- begin modal form -->
    <form action="" id="login-form" class="sky-form sky-form-modal">
        <header>Login form</header>

        <fieldset>
            <section>
                <div class="row">
                    <label class="label col col-4">E-mail</label>
                    <div class="col col-8">
                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
