<div class="col-md-8 margin30 sky-form-columns col-md-offset-2">
    <div class="divide40"></div>
    <!--sky form -->
    <h3 class="margin20">Tell us about your Karmency transaction!</h3>

    <%= form_for [@coin, @moment], html: {id: "sky-form", class: "sky-form"} do |f| %>
        <fieldset>
            <section>
                <div class="inline-group">

                    <label class="radio">
                        <input type="radio" name="moment[giver_receiver]" value="receiver" checked=""><i></i>I received the coin from someone else
                    </label>

                    <label class="radio"><input type="radio" value="giver" name="moment[giver_receiver]"><i></i>I gave the coin to someone else</label>
                </div>
            </section>
            <label class="label">Description</label>
            <section>
                <label class="textarea">
                    <%= f.text_area :description, rows: "3", placeholder: "e.g. 'He gave me his seat on the subway'" %>
                </label>
            </section>
        </fieldset>
        <fieldset>
            <label class="label">Date & Location</label>
            <div class="row">
