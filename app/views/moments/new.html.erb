                        </label>
                    </div>
                </div>
            </section>

            <section>
                <div class="row">
                    <label class="label col col-4">Password</label>
                    <div class="col col-8">
                        <label class="input">
                            <i class="icon-append fa fa-lock"></i>
                            <input type="password" name="password" id="login-password">
                        </label>
                        <div class="note"><a href="#">Not signed up yet? Register</a></div>
                    </div>
                </div>
            </section>

        </fieldset>
        <footer>
            <button type="submit" class="button">Log in</button>
            <a href="#" id="close-login-form" class="button button-secondary modal-closer">Close</a>
        </footer>
    </form>
    <!-- end modal form -->
</div>
<a id="open-login-form" href="#login-form" class="modal-opener" style="display: none"></a>


<!--sky form plugin js-->
<script src="/sky-form/js/jquery.form.min.js" type="text/javascript"></script>
<script src="/sky-form/js/jquery.validate.min.js" type="text/javascript"></script>
<script src="/sky-form/js/jquery.modal.js"></script>
<script src="/sky-form/js/jquery-ui.min.js"></script>

<script type="text/javascript">
 $(document).ready(function(){
     // Retrieve location
     function getLocation() {
         if (navigator.geolocation) {
             navigator.geolocation.getCurrentPosition(lookupPosition);
         }
     }
     function lookupPosition(position) {
         var data = {
             lat: position.coords.latitude,
             lng: position.coords.longitude
         };
         $.getJSON('/locations/lookup', data, function(data){
             $('input[name="moment[city]"]').val(data.city);
             var abbrev = $( "option:contains('" + data.state + "')" ).val();
             if (abbrev) {
                 $("select[name='moment[state]']").val(abbrev);
             };
         });
     }
     getLocation();

     // pre-populate date
     function autoFillDate() {
         var today = new Date();
         var dd = today.getDate();
         var mm = today.getMonth()+1; //January is 0!
         var yy = today.getFullYear()-2000;

         if(dd<10) {
             dd='0'+dd
         }

         if(mm<10) {
             mm='0'+mm
         }

         today = mm+'/'+dd+'/'+yy;
         $('#date').val(today);
     }
     autoFillDate();

     // Datepicker
     $('#date').datepicker({
         dateFormat: 'dd/mm/yy',
         prevText: '<i class="fa fa-chevron-left"></i>',
         nextText: '<i class="fa fa-chevron-right"></i>'
     });

     // Add value not equals validator
     $.validator.addMethod("valueNotEquals", function(value, element, arg){
         return arg != value;
     }, "Value must not equal arg.");

     $.validator.addMethod("isValidLocation", function(value, element, arg){
         var state = $('option[value=' + $('select[name="moment[state]"]').val() + ']')[0].text;
         var city = $('input[name="moment[city]"]').val();
         var isSuccess = false;

         $.ajax({ url: "/locations/validate",
                  data: {state: state, city: city},
                  dataType: "json",
                  async: false,
                  success:
                  function(data) {
                      isSuccess = data.isCity ? true : false
                  }
         });

         return isSuccess;

     }, "Must be valid location.");

     // check login status
     $.validator.addMethod("isLoggedIn", function(value, element, arg){
         var isSuccess = false;

         // check if user logged in
         $.ajax({ url: "/login_status",
                  dataType: "json",
                  beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
                  async: false,
                  success:
                  function(data) {
                      isSuccess = data.loginStatus ? true : false
                  }
         });

         // handle not logged in
         if (!isSuccess) {
             $('#open-login-form').click();
         };

         return isSuccess;
     }, "");

     // don't validate city field unless submit event, since it requires AJAX call
     $.validator.defaults.onfocusout = function (element, event) {
         if ($(element).data("control") === "myCityControl") return;
         if ($(element).data("control") === "myLoginControl") return;
         if (!this.checkable(element) && (element.name in this.submitted || !this.optional(element))) {
             this.element(element);
         }
     }

     $.validator.defaults.onkeyup = function (element, event) {
         if ($(element).data("control") === "myCityControl") return;
         if ($(element).data("control") === "myLoginControl") return;
         if (event.which === 9 && this.elementValue(element) === "") {
             return;
         }
         else if (element.name in this.submitted || element === this.lastElement) {
             this.element(element);
         }
     }

     // Validation
     $("#sky-form").validate({
         rules: {
             "moment[description]": {
                 required: true
             },
             "moment[date]": {
                 required: true,
                 date: true
             },
             "moment[state]": {
                 valueNotEquals: "0"
             },
             "moment[city]": {
                 required: true,
                 isValidLocation: true,
                 isLoggedIn: true // TODO: make this less hackey
             }
         },
         messages: {
             "moment[description]": {
                 required: "Enter a description"
             },
             "moment[date]": {
                 required: "Enter the date of the transaction",
                 date: "Must be a valid date"
             },
             "moment[state]": {
                 valueNotEquals: 'Please enter a valid U.S. state or specify "Non-U.S."'
             },
             "moment[city]": {
                 required: "Enter the city where the transaction took place"
             }
         },
         // Do not change code below
         errorPlacement: function(error, element) {
             error.insertAfter(element.parent());
         }
     });

     $('#login-form').submit(function(e){
         e.preventDefault();

         var email = $('#login-email').val();
         var password = $('#login-password').val();
         var data = {
             user: {
                 email: email,
                 password: password,
                 remember_me: 1
             }
         };

         $.ajax({ url: '/users/sign_in',
                  type: 'POST',
                  dataType: 'JSON',
                  beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
                  data: data,
                  success: function(response, status, xhr) {
                      var csrf_param = xhr.getResponseHeader('X-CSRF-Param');
                      var csrf_token = xhr.getResponseHeader('X-CSRF-Token');

                      if (csrf_param) {
                          $('meta[name="csrf-param"]').attr('content', csrf_param);
                      }
                      if (csrf_token) {
                          $('meta[name="csrf-token"]').attr('content', csrf_token);
                      }
                      $('input[name="authenticity_token"]').val(csrf_token);
                      $('#close-login-form').click();
                  }
         });
     });
 });
</script>
